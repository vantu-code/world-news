     <label for=''></label>
     <input type='text' style="display:none;" name='article' value="{{this.content}}">
   
   </form>

  <a class="article-delete-btn" href="/favorites/delete/{{this.id}}" data-favoriteid="{{this.id}}">Delete this favorite</a>
   
</article>
